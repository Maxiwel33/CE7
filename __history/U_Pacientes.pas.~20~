procedure TFrm_pacientes.pnl10Click(Sender: TObject);
begin
    if pgc1.ActivePage =ts_localiza  then
    begin
    pgc1.ActivePage :=ts_cadastro ;
    end else
     pgc1.ActivePage :=ts_localiza ;
end;

